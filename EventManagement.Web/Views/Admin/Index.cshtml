@{
    ViewData["Title"] = "Yönetim Paneli";
}

<!-- Hero Section -->
<div class="hero-section mb-5">
    <div class="container text-center">
        <h1 class="hero-title">
            <i class="fas fa-cog me-3"></i>Yönetim Paneli
        </h1>
        <p class="hero-subtitle">
            Etkinliklerinizi yönetin, profil bilgilerinizi güncelleyin ve sistem ayarlarınızı kontrol edin.
        </p>
    </div>
</div>

<!-- Welcome Card -->
<div class="row mb-5">
    <div class="col-12">
        <div class="card">
            <div class="card-body text-center">
                <h4 class="card-title mb-3">
                    <i class="fas fa-user-circle me-2"></i>Hoş Geldiniz, @ViewBag.UserName!
                </h4>
                <p class="card-text text-muted">
                    Yönetim panelinde etkinliklerinizi yönetebilir, profil bilgilerinizi güncelleyebilir ve 
                    sistem ayarlarınızı kontrol edebilirsiniz.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Dashboard Cards -->
<div class="row">
    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card h-100 text-center">
            <div class="card-body">
                <div class="mb-3">
                    <i class="fas fa-user fa-3x text-primary"></i>
                </div>
                <h5 class="card-title">Profil Yönetimi</h5>
                <p class="card-text text-muted">Profil bilgilerinizi güncelleyin ve hesap ayarlarınızı yönetin.</p>
                <a href="@Url.Action("Profile", "Admin")" class="btn btn-primary w-100">
                    <i class="fas fa-user-edit me-2"></i>Profili Düzenle
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card h-100 text-center">
            <div class="card-body">
                <div class="mb-3">
                    <i class="fas fa-calendar-plus fa-3x text-success"></i>
                </div>
                <h5 class="card-title">Etkinlik Yönetimi</h5>
                <p class="card-text text-muted">Etkinlikleri görüntüleyin, düzenleyin ve yeni etkinlikler oluşturun.</p>
                <a href="@Url.Action("Events", "Admin")" class="btn btn-success w-100">
                    <i class="fas fa-list me-2"></i>Etkinlikleri Görüntüle
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card h-100 text-center">
            <div class="card-body">
                <div class="mb-3">
                    <i class="fas fa-plus-circle fa-3x text-info"></i>
                </div>
                <h5 class="card-title">Yeni Etkinlik</h5>
                <p class="card-text text-muted">Yeni bir etkinlik oluşturun ve sisteme ekleyin.</p>
                <a href="@Url.Action("CreateEvent", "Admin")" class="btn btn-info w-100">
                    <i class="fas fa-plus me-2"></i>Etkinlik Oluştur
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card h-100 text-center">
            <div class="card-body">
                <div class="mb-3">
                    <i class="fas fa-home fa-3x text-warning"></i>
                </div>
                <h5 class="card-title">Ana Sayfa</h5>
                <p class="card-text text-muted">Kullanıcı arayüzüne dönün ve etkinlikleri görüntüleyin.</p>
                <a href="@Url.Action("Index", "Home")" class="btn btn-warning w-100">
                    <i class="fas fa-home me-2"></i>Ana Sayfaya Git
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="row mt-5">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-bar me-2"></i>Hızlı İstatistikler
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4 mb-3">
                        <div class="p-3">
                            <i class="fas fa-calendar-check fa-2x text-primary mb-2"></i>
                            <h4 class="text-primary">@ViewBag.TotalEvents</h4>
                            <p class="text-muted mb-0">Toplam Etkinlik</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="p-3">
                            <i class="fas fa-clock fa-2x text-success mb-2"></i>
                            <h4 class="text-success">@ViewBag.UpcomingEvents</h4>
                            <p class="text-muted mb-0">Yaklaşan Etkinlik</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="p-3">
                            <i class="fas fa-check-circle fa-2x text-info mb-2"></i>
                            <h4 class="text-info">@ViewBag.CompletedEvents</h4>
                            <p class="text-muted mb-0">Tamamlanan Etkinlik</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-bolt me-2"></i>Hızlı İşlemler
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <a href="@Url.Action("CreateEvent", "Admin")" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-plus me-2"></i>Yeni Etkinlik Oluştur
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a href="@Url.Action("Calendar", "Home")" class="btn btn-outline-primary btn-lg w-100">
                            <i class="fas fa-calendar me-2"></i>Takvim Görünümü
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 