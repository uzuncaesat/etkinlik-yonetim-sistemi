@model IEnumerable<EventManagement.Web.Models.Event>

@{
    ViewData["Title"] = "Etkinlik Yönetimi";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                <i class="fas fa-calendar-alt me-2"></i>Etkinlik Yönetimi
            </h2>
            <a href="@Url.Action("CreateEvent", "Admin")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Yeni Etkinlik
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                @if (!Model.Any())
                {
                    <div class="text-center py-5">
                        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">Henüz etkinlik bulunmuyor</h4>
                        <p class="text-muted">İlk etkinliğinizi oluşturmak için "Yeni Etkinlik" butonunu kullanın.</p>
                        <a href="@Url.Action("CreateEvent", "Admin")" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>İlk Etkinliği Oluştur
                        </a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Başlık</th>
                                    <th>Başlangıç</th>
                                    <th>Bitiş</th>
                                    <th>Ekleyen</th>
                                    <th>Kayıt Zamanı</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var eventItem in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@eventItem.Title</strong>
                                            <br>
                                            <small class="text-muted">@eventItem.ShortDescription</small>
                                        </td>
                                        <td>@eventItem.StartDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@eventItem.EndDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@eventItem.Creator?.Name</td>
                                        <td>@eventItem.CreatedAt.ToString("dd.MM.yyyy")</td>
                                        <td>
                                            @if (eventItem.Status == "active")
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("EditEvent", "Admin", new { id = eventItem.Id })" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                                        onclick="confirmDelete(@eventItem.Id, '@eventItem.Title')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Etkinlik Silme Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bu etkinliği silmek istediğinizden emin misiniz?</p>
                <p><strong id="eventTitle"></strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, title) {
            document.getElementById('eventTitle').textContent = title;
            document.getElementById('deleteForm').action = '@Url.Action("DeleteEvent", "Admin")/' + id;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
} 