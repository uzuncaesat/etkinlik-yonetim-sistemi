@model EventManagement.Web.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<!-- Hero Section -->
<div class="hero-section mb-5">
    <div class="container text-center">
        <h1 class="hero-title">
            <i class="fas fa-user-plus me-3"></i>Hesap Oluşturun
        </h1>
        <p class="hero-subtitle">
            Etkinlik yönetim sistemine katılarak etkinliklerinizi organize etmeye başlayın.
        </p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">
        <div class="card">
            <div class="card-header text-center">
                <h4 class="mb-0">
                    <i class="fas fa-user-plus me-2"></i>Yeni Hesap Oluştur
                </h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-user me-2"></i>Ad Soyad
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg" placeholder="Ad Soyad" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-envelope me-2"></i>E-posta Adresi
                                </label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="ornek@email.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="Password" class="form-label">
                                    <i class="fas fa-lock me-2"></i>Şifre
                                </label>
                                <input asp-for="Password" class="form-control form-control-lg" placeholder="En az 8 karakter" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Şifre en az 8 karakter uzunluğunda olmalı ve büyük-küçük harf ile rakam içermelidir.
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <i class="fas fa-lock me-2"></i>Şifre Tekrarı
                                </label>
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Şifreyi tekrar giriniz" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="BirthDate" class="form-label">
                            <i class="fas fa-calendar me-2"></i>Doğum Tarihi
                        </label>
                        <input asp-for="BirthDate" class="form-control form-control-lg" type="date" />
                        <span asp-validation-for="BirthDate" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-grid mb-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Hesap Oluştur
                        </button>
                    </div>
                </form>
                
                <hr class="my-4">
                
                <div class="text-center">
                    <p class="mb-3 text-muted">Zaten hesabınız var mı?</p>
                    <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-primary btn-lg w-100">
                        <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Benefits -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center mb-4">Hesap Oluşturmanın Avantajları</h5>
                        <div class="row">
                            <div class="col-md-4 text-center mb-3">
                                <div class="p-3">
                                    <i class="fas fa-calendar-plus fa-3x text-primary mb-3"></i>
                                    <h6>Etkinlik Oluşturma</h6>
                                    <p class="small text-muted">Kendi etkinliklerinizi oluşturun ve yönetin</p>
                                </div>
                            </div>
                            <div class="col-md-4 text-center mb-3">
                                <div class="p-3">
                                    <i class="fas fa-chart-line fa-3x text-primary mb-3"></i>
                                    <h6>İstatistikler</h6>
                                    <p class="small text-muted">Etkinlik performansınızı takip edin</p>
                                </div>
                            </div>
                            <div class="col-md-4 text-center mb-3">
                                <div class="p-3">
                                    <i class="fas fa-bell fa-3x text-primary mb-3"></i>
                                    <h6>Bildirimler</h6>
                                    <p class="small text-muted">Önemli etkinliklerden haberdar olun</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 